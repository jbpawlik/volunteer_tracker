<h1>Volunteer Tracker</h1>

<img src="../images/hands.jpeg" id="hands">
<h3>Open Projects:</h3>

<% if @projects.any? %>
  <ul>
    <% @projects.each do |project| %>
      <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no projects to display.</p>
<% end %>

<p>Do you want to <a href="/projects/new">add a new project?</a></p>

<h3>Assignments</h3>

<% if @volunteers.any? %>
  <ul>
    <% @projects.each do |project| %>
      <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
    <% end %>
    <% @volunteers.each do |volunteer| %>
      <li><a><%= volunteer.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no assignments to display.</p>
<% end %>