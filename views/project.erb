<h2>PROJECT: <a href="/projects/<%= @project.id %>/edit"><%= @project.title %></a></h2>
<br>
<h2>Volunteers</h2>
  
  <h3><% if @project.volunteers.any? %>
    <ul>
      <% @project.volunteers.each do |volunteer| %>
        <li><a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no volunteers listed for this project yet.</p>
  <% end %></h3>
<br>
<form action="/projects/<%= @project.id %>/volunteers" method="post">
  <div class="form-group">
    <button type="submit" class="btn" id="volunteerButton"><input id="n" name="volunteer_name" class="form-control" type="text" placeholder="Volunteer Name" required><h3>Add Volunteer</h3>
  </div>
</button>
</form>


<p><a href="/projects">Return to project list</a></p>
