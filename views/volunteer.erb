<h2>Volunteer: <%= @volunteer.name %></h2>
<br>
<h3>Project: <%= @volunteer.project.title %></h3>
<br>
<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input id="name" id="volunteerInput" name="name" type="text" required>
  <button type="submit">Update Volunteer</button>
</form>
<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete volunteer</button>
</form>
<br>
<br>

<br>
<br>
<h3><a href="/projects/<%= @volunteer.project.id %>">Back to <%= @volunteer.project.title %></a></h3>
